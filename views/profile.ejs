<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    
    <div class="w-full px-10 py-3 flex justify-between bg-zinc-800 text-white">
        <h3>Pinterest</h3>
        <div class="flex gap-10 items-center">
          <a href="#">Profile</a>
        <a href="#">Feed</a>
        <a class="px-3 py-2 bg-red-700 text-white rounded-lg" href="/logout">LogOut</a>
        </div>
      </div>
    <form id="fileupload" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="images" >
    </form>
    <div class="prodets flex flex-col items-center mt-20">
        <div class="relative">
            <span id="dpicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-600">
                <i class=" ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%=user.dp%>" alt="">
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-5">Hasnain Raza</h1>
        <h3 class="text-md">@username</h3>
        <a href="" class="mt-4 px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
        <button class="px-10 py-2 rounded-lg text-xs font-semibold mt-5 bg-red-600">New Post</button>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 rounded-lg bg-zinc-200 overflow-hidden">
                <img class="w-full h-full object-cover" src="https://plus.unsplash.com/premium_photo-1667861381644-3a29c049b6ec?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyfHx8ZW58MHx8fHx8" alt="">
            </div>
            <h3 class="text-xl font-semibold mt-3">all pins</h3>
            <h5 class="text-sm font-medium opacity-60">65 pins</h5>
        </div>
        

    </div>
    <script>
        document.querySelector("#dpicon").addEventListener("click", function(){
            document.querySelector("#fileupload input").click();
        });
        document.querySelector("#fileupload input").addEventListener("change",function(){
            document.querySelector("#fileupload").submit();
        })
    </script>

</div>

<% include ./partials/footer.ejs %>